<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:che='urn:import:org.eclipse.che.ide.ui.listbox'>
	<ui:with field='locale'
		type='zend.com.che.plugin.zdb.ide.ZendDebuggerLocalizationConstant' />

	<ui:style>
	.label {
		margin-bottom: 15px;
	}
	</ui:style>

	<g:FlowPanel debugId="zendDebugConfigurationPageView-mainPanel">
		<g:Label text="{locale.zendDebugConfigurationPageViewNotice}"
			addStyleNames="{style.label}" />
		<g:Label text="{locale.zendDebugConfigurationPageViewClientHostIPLabel}" />
		<g:TextBox ui:field="clientHostIP" />
		<g:Label text="{locale.zendDebugConfigurationPageViewDebugPortLabel}" />
		<g:TextBox ui:field="debugPort" />
		<g:Label text="{locale.zendDebugConfigurationPageViewBroadcastPortLabel}" />
		<g:TextBox ui:field="broadcastPort" />
		<g:CheckBox ui:field="useSslEncryption"
			text="{locale.zendDebugConfigurationPageViewUseSslEncryptionCheckbox}" />
	</g:FlowPanel>
</ui:UiBinder>
